import java.util.*;

class HelloWorld {
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int t=s.nextInt();
        int n=t;
        int sum=0;
        do{
            sum=0;
        while(n>0)
        {
            int r = n%10;
            sum = sum+r;
            n = n/10;
        }
        n=sum;
       
        }while(n>=9);
        System.out.print(sum);
        }
}
